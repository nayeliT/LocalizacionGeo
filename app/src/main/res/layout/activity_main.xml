<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ffe6b2ff"
    android:weightSum="1">

    <TextView
        android:id="@+id/LblPosicion"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:text="@string/posicion_actual"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/LblPosLatitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#aaaaaa"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LblPosLongitud"
        android:layout_marginBottom="5dp"
        android:background="#aaaaaa"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LblPosPrecision"
        android:layout_marginBottom="5dp"
        android:background="#aaaaaa"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_margin="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/BtnActualizar"
            android:text="@string/Activar"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/BtnDesactivar"
            android:text="@string/Desactivar"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LblEst"
        android:text="@string/estado_proveedor"
        android:textStyle="italic"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LblEstado"
        android:background="#aaaaaa"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_margin="10dp" />

</LinearLayout>
